extends base

block append head
  script(src='/js/forgotPassword.js' defer)

block content
  main.auth-main
    .auth-container
      .auth-form-container
        .auth-header
          h2.auth-title Forgot Your Password?
          p.auth-subtitle Enter your email address and we'll send you a link to reset your password

        form.auth-form.form--forgot-password
          .form__group
            label.form__label(for='email') Email address
            .input-container
              i.input-icon âœ‰
              input#email.form__input(type='email', placeholder='you@example.com', required)
          
          .form__group
            button.btn.btn--auth Send Reset Link
          
          .auth-footer
            p.auth-footer-text Remember your password? 
              a.auth-link(href='/login') Sign in here

      .auth-image
        img(src='/img/tours/tour-3-cover.jpg', alt='Beautiful Tour Image')
        .auth-image-overlay
        .auth-image-content
          h3.auth-image-title Reset Your Password
          p.auth-image-text Get back to exploring the world's most extraordinary destinations
          .reset-steps
            .reset-step
              .reset-step-number 1
              .reset-step-text Enter your email address
            .reset-step
              .reset-step-number 2
              .reset-step-text Check your inbox for a reset link
            .reset-step
              .reset-step-number 3
              .reset-step-text Create a new password

  style.
    .auth-main {
      min-height: calc(100vh - 8rem);
      display: flex;
      align-items: center;
      justify-content: center;
      background-color: var(--color-grey-light-1);
      padding: 3rem 1rem;
    }
    
    .auth-container {
      display: flex;
      width: 100%;
      max-width: 1100px;
      min-height: 600px;
      background-color: var(--color-white);
      border-radius: var(--border-radius-large);
      overflow: hidden;
      box-shadow: var(--shadow-medium);
    }
    
    .auth-form-container {
      flex: 1;
      padding: 4rem;
      display: flex;
      flex-direction: column;
    }
    
    .auth-header {
      margin-bottom: 3rem;
      text-align: center;
    }
    
    .auth-title {
      font-size: 2.8rem;
      font-weight: 700;
      color: var(--color-primary);
      margin-bottom: 1rem;
    }
    
    .auth-subtitle {
      font-size: 1.5rem;
      color: var(--color-grey-dark-1);
      line-height: 1.6;
    }
    
    .auth-form {
      width: 100%;
      max-width: 40rem;
      margin: 0 auto;
    }
    
    .input-container {
      position: relative;
    }
    
    .input-icon {
      position: absolute;
      top: 50%;
      left: 1.5rem;
      transform: translateY(-50%);
      color: var(--color-grey-dark-1);
      font-style: normal;
    }
    
    .form__input {
      width: 100%;
      padding: 1.2rem 1.5rem 1.2rem 4rem;
      border: 1px solid var(--color-grey-light-2);
      border-radius: var(--border-radius-small);
      font-family: inherit;
      font-size: 1.5rem;
      color: var(--color-grey-dark-2);
      transition: var(--transition-medium);
      margin-bottom: 3rem;
    }
    
    .form__input:focus {
      outline: none;
      border-color: var(--color-tertiary);
      box-shadow: 0 0 0 2px rgba(230, 126, 34, 0.1);
    }
    
    .form__label {
      display: block;
      font-size: 1.5rem;
      font-weight: 600;
      margin-bottom: 0.8rem;
      color: var(--color-primary);
    }
    
    .btn--auth {
      width: 100%;
      background-color: var(--color-tertiary);
      color: var(--color-white);
      padding: 1.4rem;
      font-size: 1.6rem;
      font-weight: 600;
      border: none;
      border-radius: var(--border-radius-small);
      cursor: pointer;
      transition: var(--transition-medium);
    }
    
    .btn--auth:hover {
      background-color: var(--color-tertiary-dark);
      transform: translateY(-3px);
    }
    
    .auth-footer {
      margin-top: 3rem;
      text-align: center;
      font-size: 1.5rem;
      color: var(--color-grey-dark-1);
    }
    
    .auth-link {
      color: var(--color-tertiary);
      text-decoration: none;
      font-weight: 600;
      transition: var(--transition-fast);
    }
    
    .auth-link:hover {
      color: var(--color-tertiary-dark);
      text-decoration: underline;
    }
    
    .auth-image {
      display: none;
      position: relative;
      flex: 1;
    }
    
    .auth-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    
    .auth-image-overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(to bottom right, rgba(44, 62, 80, 0.7), rgba(230, 126, 34, 0.8));
    }
    
    .auth-image-content {
      position: absolute;
      top: 50%;
      left: 0;
      right: 0;
      transform: translateY(-50%);
      padding: 0 3rem;
      color: var(--color-white);
      text-align: center;
    }
    
    .auth-image-title {
      font-size: 2.8rem;
      font-weight: 700;
      margin-bottom: 1.5rem;
    }
    
    .auth-image-text {
      font-size: 1.6rem;
      line-height: 1.6;
      margin-bottom: 3rem;
    }
    
    .reset-steps {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }
    
    .reset-step {
      display: flex;
      align-items: center;
      gap: 1.5rem;
    }
    
    .reset-step-number {
      width: 3rem;
      height: 3rem;
      border-radius: 50%;
      background-color: rgba(255, 255, 255, 0.2);
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.6rem;
      font-weight: 600;
    }
    
    .reset-step-text {
      font-size: 1.5rem;
      text-align: left;
    }
    
    @media only screen and (min-width: 768px) {
      .auth-image {
        display: block;
      }
      
      .auth-form-container {
        padding: 5rem;
      }
    }
    
    @media only screen and (max-width: 767px) {
      .auth-container {
        max-width: 500px;
      }
      
      .auth-form-container {
        padding: 3rem 2rem;
      }
    }
