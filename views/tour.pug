extends base
include _reviewCard

block append head
  script(src='https://api.mapbox.com/mapbox-gl-js/v2.15.0/mapbox-gl.js')
  link(href='https://api.mapbox.com/mapbox-gl-js/v2.15.0/mapbox-gl.css' rel='stylesheet')
  script(src='https://js.stripe.com/v3/')
  
mixin overviewBox(label, text, icon)
  .overview-box__detail
    svg.overview-box__icon
      use(xlink:href=`/img/icons.svg#icon-${icon}`)
    span.overview-box__label= label
    span.overview-box__text= text

block content
  section.section-header
    .breadcrumbs
      .container
        ul.breadcrumbs-list
          li.breadcrumbs-item
            a.breadcrumbs-link(href="/") Home
          li.breadcrumbs-item
            a.breadcrumbs-link(href="/tours") Tours
          li.breadcrumbs-item.breadcrumbs-item--active= tour.name

    .header__hero
      .header__hero-overlay &nbsp;
      img.header__hero-img(src=`/img/tours/${tour.imageCover}`, alt=`${tour.name}`)

    .heading-box
      h1.heading-primary
        span= `${tour.name}`
      .tour-ratings
        .tour-ratings-stars
          - const stars = Math.round(tour.ratingsAverage)
          - for (let i = 1; i <= 5; i++)
            if i <= stars
              i.star-icon.star-filled ‚òÖ
            else
              i.star-icon.star-empty ‚òÖ
        .tour-ratings-count= `${tour.ratingsQuantity} reviews`
      
      .badge-container
        span.badge.badge--primary= tour.difficulty
        if tour.specialOffer
          span.badge.badge--secondary Special Offer

  section.tour-details-container
    .container
      .tour-main
        .tour-overview
          .tour-highlights
            h2.section-title Tour Highlights
            ul.highlights-list
              li.highlights-item
                i.highlight-icon üîç
                span.highlight-text Experience the breathtaking views of #{tour.startLocation.description}
              li.highlights-item
                i.highlight-icon üèûÔ∏è
                span.highlight-text Explore the stunning natural landscapes
              li.highlights-item
                i.highlight-icon üåø
                span.highlight-text Connect with nature in this unforgettable journey
              li.highlights-item
                i.highlight-icon üì∏
                span.highlight-text Create memories that will last a lifetime
          
          .description-box
            h2.section-title About This Tour
            - const paragraphs = tour.description.split('\n');
            each p in paragraphs
              p.description__text= p

        .tour-gallery
          h2.section-title Tour Gallery
          .gallery-grid
            each img, i in tour.images
              .gallery-item
                img.gallery-img(src=`/img/tours/${img}`, alt=`${tour.name} Tour ${i + 1}`)

        .tour-experience
          h2.section-title Your Experience
          .experience-timeline
            .timeline-item
              .timeline-point
                i.timeline-icon üöå
              .timeline-content
                h3.timeline-title Day 1: Departure
                p.timeline-text Begin your adventure from the meeting point in the morning
            .timeline-item
              .timeline-point
                i.timeline-icon ü•æ
              .timeline-content
                h3.timeline-title During your tour
                p.timeline-text Enjoy guided walks, breathtaking views, and local experiences
            .timeline-item
              .timeline-point
                i.timeline-icon üåÖ
              .timeline-content
                h3.timeline-title.timeline-title--last Day #{tour.duration}: Return
                p.timeline-text Return with amazing memories to cherish forever

        .section-map
          h2.section-title Tour Route
          #map(data-locations=`${JSON.stringify(tour.locations)}`)

        .section-reviews
          h2.section-title Customer Reviews
          .reviews-summary
            .reviews-average
              span.reviews-average-number= tour.ratingsAverage
              .reviews-stars
                - for (let i = 1; i <= 5; i++)
                  if i <= Math.round(tour.ratingsAverage)
                    i.star-icon.star-filled ‚òÖ
                  else
                    i.star-icon.star-empty ‚òÖ
              span.reviews-count based on #{tour.ratingsQuantity} reviews
            
          .reviews-container
            each review in tour.reviews
              +reviewCard(review)
            
            if tour.reviews.length > 3
              .reviews-more
                button.btn.btn--text Show all reviews

      .tour-sidebar
        .booking-card
          .price-container
            span.price-label From
            span.price-value $#{tour.price}
            span.price-period per person
            
          .quick-facts
            .quick-fact
              i.fact-icon üìÖ
              .fact-content
                span.fact-label Duration
                span.fact-text= `${tour.duration} days`
            .quick-fact
              i.fact-icon üë•
              .fact-content
                span.fact-label Group size
                span.fact-text= `${tour.maxGroupSize} people`
            .quick-fact
              i.fact-icon üìç
              .fact-content
                span.fact-label Location
                span.fact-text= tour.startLocation.description
            .quick-fact
              i.fact-icon üìÜ
              .fact-content
                span.fact-label Next date
                - const date = tour.startDates[0].toLocaleString('en-us', {month: 'long', year: 'numeric'})
                span.fact-text= date

          .booking-actions
            if user
              button.btn.btn--primary.btn--block#book-tour(data-tour-id=`${tour.id}`) Book Now
            else
              a.btn.btn--primary.btn--block(href='/login') Log in to book
            
            button.btn.btn--outline.btn--block Add to wishlist
          
        .guides-card
          h3.sidebar-title Your Tour Guides
          .guides-list
            each guide in tour.guides
              .guide-item
                img.guide-img(src=`/img/users/${guide.photo}`, alt=`${guide.name}`)
                .guide-info
                  span.guide-name= guide.name
                  - if (guide.role === 'lead-guide')
                    span.guide-role Lead Guide
                  - if (guide.role === 'guide')
                    span.guide-role Tour Guide

  section.section-cta
    .container
      .cta
        .cta-content
          h2.cta-title What are you waiting for?
          p.cta-text= `${tour.duration} days. 1 adventure. Infinite memories. Make it yours today!`
          if user
            button.btn.btn--primary.btn--large#book-tour-footer(data-tour-id=`${tour.id}`) Book tour now!
          else
            a.btn.btn--primary.btn--large(href='/login') Log in to book tour

  style.
    /* Modern Tour Page Styles */
    .breadcrumbs {
      background-color: var(--color-grey-light-1);
      padding: 1.2rem 0;
    }
    
    .container {
      max-width: 120rem;
      margin: 0 auto;
      padding: 0 3rem;
    }
    
    .breadcrumbs-list {
      display: flex;
      list-style: none;
      font-size: 1.4rem;
    }
    
    .breadcrumbs-item {
      display: flex;
      align-items: center;
    }
    
    .breadcrumbs-item:not(:last-child)::after {
      content: '‚Ä∫';
      margin: 0 1rem;
      color: var(--color-grey-dark-1);
    }
    
    .breadcrumbs-link {
      color: var(--color-grey-dark-1);
      text-decoration: none;
      transition: var(--transition-fast);
    }
    
    .breadcrumbs-link:hover {
      color: var(--color-tertiary);
    }
    
    .breadcrumbs-item--active {
      color: var(--color-primary-dark);
      font-weight: 600;
    }
    
    .section-header {
      position: relative;
    }
    
    .header__hero {
      height: 50vh;
      position: relative;
    }
    
    .header__hero-overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.6));
    }
    
    .header__hero-img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    
    .heading-box {
      position: absolute;
      bottom: 3rem;
      left: 0;
      right: 0;
      padding: 0 3rem;
      color: var(--color-white);
      text-align: center;
    }
    
    .heading-primary {
      font-size: 4.2rem;
      font-weight: 700;
      text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
      margin-bottom: 1.5rem;
    }
    
    .tour-ratings {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 0.5rem;
      margin-bottom: 2rem;
    }
    
    .tour-ratings-stars {
      display: flex;
    }
    
    .star-icon {
      font-size: 2rem;
      font-style: normal;
    }
    
    .star-filled {
      color: #ffc107;
    }
    
    .star-empty {
      color: rgba(255, 255, 255, 0.5);
    }
    
    .tour-ratings-count {
      font-size: 1.4rem;
    }
    
    .badge-container {
      display: flex;
      justify-content: center;
      gap: 1rem;
    }
    
    .badge {
      padding: 0.6rem 1.5rem;
      font-size: 1.2rem;
      font-weight: 600;
      text-transform: uppercase;
      border-radius: 2rem;
    }
    
    .badge--primary {
      background-color: var(--color-primary);
      color: var(--color-white);
    }
    
    .badge--secondary {
      background-color: var(--color-tertiary);
      color: var(--color-white);
    }
    
    .tour-details-container {
      padding: 5rem 0;
      background-color: var(--color-grey-light-1);
    }
    
    .tour-main {
      float: left;
      width: 66%;
    }
    
    .tour-sidebar {
      float: right;
      width: 30%;
    }
    
    .section-title {
      font-size: 2.4rem;
      font-weight: 700;
      color: var(--color-primary);
      margin-bottom: 2rem;
    }
    
    .tour-overview, 
    .tour-gallery, 
    .tour-experience, 
    .section-map, 
    .section-reviews {
      background-color: var(--color-white);
      border-radius: var(--border-radius-medium);
      box-shadow: var(--shadow-light);
      padding: 3rem;
      margin-bottom: 3rem;
    }
    
    .tour-highlights {
      margin-bottom: 4rem;
    }
    
    .highlights-list {
      list-style: none;
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 2rem;
    }
    
    .highlights-item {
      display: flex;
      align-items: center;
      gap: 1.2rem;
    }
    
    .highlight-icon {
      font-size: 2rem;
      font-style: normal;
      color: var(--color-tertiary);
    }
    
    .highlight-text {
      font-size: 1.5rem;
      color: var(--color-grey-dark-2);
    }
    
    .description__text {
      font-size: 1.6rem;
      line-height: 1.8;
      color: var(--color-grey-dark-2);
      margin-bottom: 2rem;
    }
    
    .description__text:last-child {
      margin-bottom: 0;
    }
    
    .gallery-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 1.5rem;
    }
    
    .gallery-item {
      border-radius: var(--border-radius-small);
      overflow: hidden;
      position: relative;
      padding-bottom: 75%;
      height: 0;
    }
    
    .gallery-img {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.5s;
    }
    
    .gallery-item:hover .gallery-img {
      transform: scale(1.05);
    }
    
    .experience-timeline {
      position: relative;
      padding: 2rem 0;
    }
    
    .experience-timeline::before {
      content: '';
      position: absolute;
      top: 0;
      bottom: 0;
      left: 1.5rem;
      width: 2px;
      background-color: var(--color-grey-light-2);
    }
    
    .timeline-item {
      position: relative;
      padding-left: 4.5rem;
      padding-bottom: 3rem;
    }
    
    .timeline-point {
      position: absolute;
      left: 0;
      width: 3rem;
      height: 3rem;
      border-radius: 50%;
      background-color: var(--color-primary);
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 1;
    }
    
    .timeline-icon {
      font-size: 1.5rem;
      color: var(--color-white);
      font-style: normal;
    }
    
    .timeline-content {
      padding: 1.5rem;
      background-color: var(--color-grey-light-1);
      border-radius: var(--border-radius-small);
    }
    
    .timeline-title {
      font-size: 1.8rem;
      font-weight: 600;
      color: var(--color-primary-dark);
      margin-bottom: 0.8rem;
    }
    
    .timeline-text {
      font-size: 1.5rem;
      color: var(--color-grey-dark-2);
      line-height: 1.6;
    }
    
    .timeline-item:last-child {
      padding-bottom: 0;
    }
    
    .timeline-title--last {
      color: var(--color-tertiary);
    }
    
    #map {
      height: 40rem;
      border-radius: var(--border-radius-small);
      overflow: hidden;
    }
    
    .reviews-summary {
      display: flex;
      align-items: center;
      margin-bottom: 3rem;
    }
    
    .reviews-average {
      display: flex;
      flex-direction: column;
      align-items: center;
      padding-right: 3rem;
      margin-right: 3rem;
      border-right: 1px solid var(--color-grey-light-2);
    }
    
    .reviews-average-number {
      font-size: 4rem;
      font-weight: 700;
      color: var(--color-primary);
      line-height: 1;
    }
    
    .reviews-stars {
      margin: 0.5rem 0;
    }
    
    .reviews-count {
      font-size: 1.4rem;
      color: var(--color-grey-dark-1);
    }
    
    .reviews-container {
      display: flex;
      flex-direction: column;
      gap: 2rem;
    }
    
    .reviews-more {
      margin-top: 2rem;
      text-align: center;
    }
    
    .booking-card,
    .guides-card {
      background-color: var(--color-white);
      border-radius: var(--border-radius-medium);
      box-shadow: var(--shadow-light);
      padding: 2.5rem;
      margin-bottom: 3rem;
    }
    
    .price-container {
      text-align: center;
      margin-bottom: 2.5rem;
      padding-bottom: 2.5rem;
      border-bottom: 1px solid var(--color-grey-light-2);
    }
    
    .price-label {
      display: block;
      font-size: 1.4rem;
      color: var(--color-grey-dark-1);
    }
    
    .price-value {
      font-size: 3.6rem;
      font-weight: 700;
      color: var(--color-tertiary);
      line-height: 1.2;
    }
    
    .price-period {
      display: block;
      font-size: 1.4rem;
      color: var(--color-grey-dark-1);
    }
    
    .quick-facts {
      margin-bottom: 2.5rem;
    }
    
    .quick-fact {
      display: flex;
      align-items: center;
      gap: 1.5rem;
      padding: 1rem 0;
      border-bottom: 1px solid var(--color-grey-light-2);
    }
    
    .fact-icon {
      font-size: 1.8rem;
      font-style: normal;
      color: var(--color-tertiary);
    }
    
    .fact-content {
      flex: 1;
    }
    
    .fact-label {
      display: block;
      font-size: 1.2rem;
      font-weight: 600;
      color: var(--color-grey-dark-1);
      text-transform: uppercase;
    }
    
    .fact-text {
      display: block;
      font-size: 1.5rem;
      color: var(--color-grey-dark-2);
    }
    
    .booking-actions {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }
    
    .btn--primary {
      background-color: var(--color-tertiary);
      color: var(--color-white);
      border: none;
      font-weight: 600;
      cursor: pointer;
      transition: var(--transition-medium);
    }
    
    .btn--primary:hover {
      background-color: var(--color-tertiary-dark);
      transform: translateY(-3px);
    }
    
    .btn--outline {
      background-color: transparent;
      border: 1px solid var(--color-tertiary);
      color: var(--color-tertiary);
      transition: var(--transition-medium);
    }
    
    .btn--outline:hover {
      background-color: var(--color-tertiary);
      color: var(--color-white);
      transform: translateY(-3px);
    }
    
    .btn--block {
      display: block;
      width: 100%;
      padding: 1.2rem;
      font-size: 1.6rem;
      border-radius: var(--border-radius-small);
      text-align: center;
      text-decoration: none;
    }
    
    .btn--text {
      background-color: transparent;
      color: var(--color-tertiary);
      border: none;
      font-size: 1.5rem;
      font-weight: 600;
      cursor: pointer;
      text-decoration: underline;
      transition: var(--transition-fast);
    }
    
    .btn--text:hover {
      color: var(--color-tertiary-dark);
    }
    
    .sidebar-title {
      font-size: 2rem;
      font-weight: 600;
      color: var(--color-primary);
      margin-bottom: 2rem;
    }
    
    .guides-list {
      display: flex;
      flex-direction: column;
      gap: 2rem;
    }
    
    .guide-item {
      display: flex;
      align-items: center;
      gap: 1.5rem;
    }
    
    .guide-img {
      width: 5rem;
      height: 5rem;
      border-radius: 50%;
      object-fit: cover;
      border: 2px solid var(--color-tertiary);
    }
    
    .guide-info {
      flex: 1;
    }
    
    .guide-name {
      display: block;
      font-size: 1.6rem;
      font-weight: 600;
      color: var(--color-primary-dark);
      margin-bottom: 0.3rem;
    }
    
    .guide-role {
      display: block;
      font-size: 1.3rem;
      color: var(--color-grey-dark-1);
      font-weight: 500;
    }
    
    .section-cta {
      background-color: var(--color-primary);
      padding: 8rem 0;
      color: var(--color-white);
      text-align: center;
      margin-top: 3rem;
    }
    
    .cta {
      display: flex;
      flex-direction: column;
      align-items: center;
    }
    
    .cta-title {
      font-size: 3.2rem;
      font-weight: 700;
      margin-bottom: 2rem;
    }
    
    .cta-text {
      font-size: 1.8rem;
      margin-bottom: 3rem;
      max-width: 60rem;
    }
    
    .btn--large {
      padding: 1.5rem 4rem;
      font-size: 1.8rem;
      border-radius: var(--border-radius-small);
    }
    
    /* Fix for layout */
    .tour-details-container::after {
      content: "";
      display: table;
      clear: both;
    }
    
    /* Responsive adjustments */
    @media screen and (max-width: 991px) {
      .tour-main {
        width: 100%;
        float: none;
      }
      
      .tour-sidebar {
        width: 100%;
        float: none;
        display: flex;
        flex-wrap: wrap;
        gap: 3rem;
        margin-top: 3rem;
      }
      
      .booking-card, .guides-card {
        flex: 1;
        min-width: 280px;
      }
      
      .highlights-list {
        grid-template-columns: 1fr;
      }
    }
    
    @media screen and (max-width: 767px) {
      .gallery-grid {
        grid-template-columns: repeat(2, 1fr);
      }
      
      .heading-primary {
        font-size: 3.2rem;
      }
      
      .heading-box {
        bottom: 2rem;
      }
      
      .tour-sidebar {
        display: block;
      }
      
      .reviews-summary {
        flex-direction: column;
        align-items: flex-start;
      }
      
      .reviews-average {
        padding-right: 0;
        margin-right: 0;
        border-right: none;
        padding-bottom: 2rem;
        margin-bottom: 2rem;
        border-bottom: 1px solid var(--color-grey-light-2);
        width: 100%;
      }
    }
    
    @media screen and (max-width: 575px) {
      .container {
        padding: 0 2rem;
      }
      
      .tour-overview, 
      .tour-gallery, 
      .tour-experience, 
      .section-map, 
      .section-reviews,
      .booking-card, 
      .guides-card {
        padding: 2rem;
      }
      
      .gallery-grid {
        grid-template-columns: 1fr;
        gap: 1rem;
      }
      
      .header__hero {
        height: 40vh;
      }
      
      .heading-primary {
        font-size: 2.8rem;
      }
    }
