header.header
  .header-container
    a.header__logo(href='/')
      img(src='/img/logo-white.png' alt='V-Natural logo')
    nav.nav.nav--tours
      a.nav__el(href='/') All Tours
      a.nav__el(href='/#destinations') Destinations
      a.nav__el(href='/#categories') Categories
      .nav__dropdown
        a.nav__el.dropdown-toggle Deals
          i.dropdown-icon â–¼
        .dropdown-menu
          a.dropdown-item(href='/deals/hot') Hot Deals
          a.dropdown-item(href='/deals/last-minute') Last Minute
          a.dropdown-item(href='/deals/group') Group Discounts
    .header-right
      nav.nav.nav--user
        if user
          a.nav__el.nav__el--logout Log out
          a.nav__el(href='/me')
            img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}`)
            span= user.name.split(' ')[0]
        else
          a.nav__el(href='/login') Log in
          a.nav__el.nav__el--cta(href='/signup') Sign up
