header.header
  nav.nav.nav--tours
    a.nav__el(href='/') All tours
  .header__logo
    img(src='/img/logo-white.png' alt='V-Natural logo')
  nav.nav.nav--user
    if user
      if user.role === 'admin'
        //- a.nav__el(href='/manage-tours') Manage Tours
        //- a.nav__el(href='/create-tour') Create Tour
      a.nav__el.nav__el--logout(href='/logout') Log out
      a.nav__el(href='/me')
        img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}`)
        span= user.name.split(' ')[0]
    else
      a.nav__el(href='/login') Log in
      a.nav__el.nav__el--cta(href='#') Sign up
